# Copy this file to .env and fill in your actual values

# Database (Required for database features)
# Example: postgresql://user:password@localhost:5432/metalabs
# For cloud: Use Neon, Supabase, or Railway connection string
DATABASE_URL="postgresql://user:password@localhost:5432/metalabs"

# NextAuth (Required for authentication)
NEXTAUTH_URL="http://localhost:3000"
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here-replace-me"

# Supabase (Required for file storage)
# Get these from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key-here"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key-here"

# GitHub OAuth (Optional - only needed if using GitHub login)
# Create OAuth App at: https://github.com/settings/developers
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# Note: The site will work without these environment variables for basic functionality
# Database and Supabase are only needed for dynamic content and authentication features
